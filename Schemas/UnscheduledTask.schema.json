{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unscheduled Task",
  "properties": {
    "id": {
      "type": "string",
      "description": "This is the unique identifier for the task. It is a UUID"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "duration": {
      "type": [
        "null",
        "number"
      ],
      "description": "The duration of the task in hours"
    },
    "importance": {
      "type": "number"
    },
    "dueDate": {
      "format": "date-time",
      "type": "string",
      "description": "The date that the task is due. This will only be the day, not the time"
    },
    "difficulty": {
      "oneOf": [
        { "const": "easy" },
        { "const": "medium" },
        { "const": "hard" }
      ]
    }
  },
  "type": "object"
}
